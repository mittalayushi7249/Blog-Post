<%- include('partials/header') %>



    <div style="width: 30%;margin: 50px auto;border: 1px solid #C0C0C0;padding: 10px;">
        <h1 style="text-align:center;">Edit <%=foundBlog.title%></h1>
        <form action="/blogs/<%=foundBlog._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" class="form-control" type="text" name="title" value="<%=foundBlog.title%>">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" class="form-control" type="text" name="image" value="<%=foundBlog.image%>">
            </div>
            <div class="form-group">
                <label for="content">Blog Content</label>
                <textarea id="content" class="form-control" name="body" cols="30" rows="10"><%=foundBlog.body%></textarea>
            </div>
            <input class="form-control btn btn-primary" type="submit">
        </form>
        <!-- <a href="/blogs">Go Back</a> -->

    </div>


<%- include('partials/footer') %>